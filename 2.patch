+        # Format based on type
+        if self.format_type == LogFormat.JSON:
+            return json.dumps(log_data, default=str, ensure_ascii=False)
+        elif self.format_type == LogFormat.STRUCTURED:
+            return self._format_structured(log_data)
+        else:
