+    def _format_structured(self, log_data: Dict[str, Any]) -> str:
+        """Format as structured text."""
+        parts = [
+            f"[{log_data['timestamp']}]",
+            f"[{log_data['level']}]",
+            f"[{log_data['logger']}]",
+            log_data['message']
+        ]
+        
+        if 'session' in log_data:
+            session = log_data['session']
