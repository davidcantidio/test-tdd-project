+    HIGH = "high"
+    CRITICAL = "critical"
+
+
+class ErrorCategory(Enum):
+    """Error categories for classification."""
+    DATABASE = "database"
+    AUTHENTICATION = "authentication"
+    VALIDATION = "validation"
+    SECURITY = "security"
+    BUSINESS_LOGIC = "business_logic"
+    EXTERNAL_API = "external_api"
+    SYSTEM = "system"
+    USER_INPUT = "user_input"
