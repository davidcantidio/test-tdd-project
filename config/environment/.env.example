# TDD Project Template - Environment Variables Example
# Copy this file to .env and customize for your project

# =============================================================================
# PROJECT SETTINGS
# =============================================================================
PROJECT_NAME=tdd-project
PROJECT_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=detailed  # simple, detailed, json

# Debug mode (disable in production)
DEBUG=true
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/tdd_project.db

# PostgreSQL (alternative to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/tdd_project
DB_NAME=tdd_project
DB_USER=tdd_user
DB_PASSWORD=tdd_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=300  # seconds

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPOSITORY=username/repository-name
GITHUB_USERNAME=your-username
GITHUB_PAGES_URL=https://username.github.io/repository-name

# GitHub API settings
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_API_TIMEOUT=30
GITHUB_MAX_RETRIES=3

# =============================================================================
# TDD TIMER CONFIGURATION
# =============================================================================
TIMER_DATABASE_PATH=data/task_timer.db
TIMER_AUTO_SAVE=true
TIMER_NOTIFICATION_ENABLED=true
TIMER_BREAK_REMINDER_MINUTES=25  # Pomodoro technique
TIMER_ANALYTICS_ENABLED=true

# TDAH optimization settings
TDAH_FOCUS_SESSION_MINUTES=25
TDAH_SHORT_BREAK_MINUTES=5
TDAH_LONG_BREAK_MINUTES=15
TDAH_SESSIONS_BEFORE_LONG_BREAK=4

# =============================================================================
# EPIC MANAGEMENT
# =============================================================================
EPICS_DIRECTORY=epics
EPIC_FILE_PATTERN=epic*.json
AUTO_VALIDATE_EPICS=true
EPIC_BACKUP_ENABLED=true
EPIC_BACKUP_DIRECTORY=backups/epics

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================
DIAGRAMS_OUTPUT_DIRECTORY=docs
MERMAID_THEME=default  # default, dark, forest, neutral
AUTO_GENERATE_DIAGRAMS=true
DIAGRAM_FORMATS=mmd,png,svg  # Available formats

# Gantt chart settings
GANTT_EXCLUDE_WEEKENDS=true
GANTT_WORKING_HOURS_START=9
GANTT_WORKING_HOURS_END=17
GANTT_TIMEZONE=UTC

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=sqlite:///:memory:
TEST_TIMEOUT_SECONDS=30
TEST_COVERAGE_THRESHOLD=90
TEST_PARALLEL_WORKERS=auto

# Test data settings
TEST_DATA_DIRECTORY=tests/data
MOCK_EXTERNAL_APIS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here-make-it-random-and-secure
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT_MINUTES=60

# CORS settings (for web applications)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=your-email@gmail.com

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
ANALYTICS_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=tdd-project
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Service ports
DEV_PORT=8001
ANALYTICS_PORT=8002
DOCS_PORT=4000
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
CI=false
GITHUB_ACTIONS=false
BUILD_NUMBER=
DEPLOY_ENVIRONMENT=

# =============================================================================
# LOCALE & TIMEZONE
# =============================================================================
TZ=UTC
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECK=true
ENABLE_ADMIN_INTERFACE=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
PRELOAD_APP=false

# Memory settings
MAX_MEMORY_MB=512
MEMORY_LIMIT_WARNING_MB=400

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=
DEBUG_PORT=5678

# Auto-formatting
AUTO_FORMAT_ON_SAVE=true
LINT_ON_COMMIT=true
TYPE_CHECK_ON_COMMIT=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=backups

# =============================================================================
# CUSTOM PROJECT VARIABLES
# =============================================================================
# Add your project-specific environment variables below
CUSTOM_API_KEY=
CUSTOM_API_URL=
CUSTOM_FEATURE_ENABLED=false