{
  "name": "[PROJECT_NAME]",
  "version": "0.1.0",
  "description": "TDD project with epic management and automated progress tracking",
  "main": "src/index.js",
  "type": "module",
  "author": "[AUTHOR_NAME] <[AUTHOR_EMAIL]>",
  "license": "MIT",
  "homepage": "https://github.com/[USERNAME]/[REPOSITORY_NAME]#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/[USERNAME]/[REPOSITORY_NAME].git"
  },
  "bugs": {
    "url": "https://github.com/[USERNAME]/[REPOSITORY_NAME]/issues"
  },
  "keywords": [
    "tdd",
    "testing",
    "project-management",
    "epic",
    "javascript",
    "typescript"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run clean && npm run compile",
    "compile": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:red": "jest --bail --verbose",
    "test:green": "jest --coverage --verbose", 
    "test:refactor": "jest --coverage --verbose --detectOpenHandles",
    "lint": "eslint src tests --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src tests --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,md}\" \"tests/**/*.{js,ts,jsx,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,md}\" \"tests/**/*.{js,ts,jsx,tsx}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:ci",
    "epic:validate": "node scripts/validate-epic.js",
    "epic:convert": "node scripts/convert-to-tdd.js",
    "diagrams:generate": "node scripts/generate-diagrams.js",
    "timer:start": "node tdah-tools/task-timer.js start",
    "timer:pause": "node tdah-tools/task-timer.js pause",
    "timer:resume": "node tdah-tools/task-timer.js resume",
    "timer:stop": "node tdah-tools/task-timer.js stop",
    "timer:status": "node tdah-tools/task-timer.js status",
    "timer:report": "node tdah-tools/task-timer.js report",
    "prepare": "husky install",
    "prepublishOnly": "npm run validate"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "fs-extra": "^11.1.0",
    "ajv": "^8.12.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/jest": "^29.5.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-import": "^2.27.0",
    "jest": "^29.6.0",
    "jest-environment-node": "^29.6.0",
    "@jest/globals": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "cross-env": "^7.0.0"
  },
  "optionalDependencies": {
    "plotly.js": "^2.24.0",
    "d3": "^7.8.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "src",
    "scripts",
    "tdah-tools",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 10000,
    "verbose": true,
    "collectCoverage": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "jest",
      "import"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external", 
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ]
    },
    "overrides": [
      {
        "files": ["**/*.test.js", "**/*.test.ts", "**/*.spec.js", "**/*.spec.ts"],
        "env": {
          "jest": true
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "exec": "node --loader ts-node/esm src/index.ts"
  },
  "packageManager": "npm@8.19.0"
}