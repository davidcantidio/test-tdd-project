{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üêç Python: Current File",
      "type": "python", 
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tdah_tools:${workspaceFolder}/scripts"
      }
    },
    
    {
      "name": "üß™ Python: Pytest Current File",
      "type": "python",
      "request": "launch", 
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short",
        "--cov=src",
        "--cov-report=term-missing"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tdah_tools:${workspaceFolder}/scripts"
      }
    },
    
    {
      "name": "üî¥ TDD: RED Phase - Run Failing Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest", 
      "args": [
        "tests/",
        "-x", 
        "--tb=short",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": {
        "group": "tdd",
        "order": 1
      }
    },
    
    {
      "name": "üü¢ TDD: GREEN Phase - Run All Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--cov=src",
        "--cov-report=term-missing",
        "--tb=short"
      ],
      "console": "integratedTerminal", 
      "justMyCode": false,
      "presentation": {
        "group": "tdd",
        "order": 2
      }
    },
    
    {
      "name": "üîÑ TDD: REFACTOR Phase - Performance Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--cov=src",
        "--durations=10",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "presentation": {
        "group": "tdd", 
        "order": 3
      }
    },
    
    {
      "name": "‚è∞ TDAH Timer: Start Task",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tdah_tools/task_timer.py",
      "args": [
        "start",
        "${input:taskId}"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "timer",
        "order": 1
      }
    },
    
    {
      "name": "üìä Analytics: Generate Report",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tdah_tools/analytics_engine.py",
      "args": [
        "report",
        "--days",
        "30"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "analytics"
      }
    },
    
    {
      "name": "üé® Generate Diagrams",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/visualization/tdd_diagram_generator.py",
      "args": [
        "--output-dir",
        "docs"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "diagrams"
      }
    },
    
    {
      "name": "‚úÖ Validate Epic JSON",
      "type": "python", 
      "request": "launch",
      "program": "${workspaceFolder}/scripts/validate_epic.py",
      "args": [
        "${input:epicFile}"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "epic"
      }
    },
    
    {
      "name": "üîÑ Convert Project to TDD",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/convert_to_tdd.py",
      "args": [
        "${workspaceFolder}"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "setup"
      }
    },
    
    {
      "name": "üêõ Debug: Python Module",
      "type": "python",
      "request": "launch",
      "module": "${input:moduleName}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tdah_tools:${workspaceFolder}/scripts",
        "DEBUG": "true"
      }
    },
    
    {
      "name": "üöÄ Run Main Application",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "ENVIRONMENT": "development"
      }
    },
    
    {
      "name": "üìù Jupyter: Debug Notebook",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/notebook_debug.py",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  
  "inputs": [
    {
      "id": "taskId",
      "description": "Enter task ID (e.g., EPIC-1.1):",
      "default": "EPIC-1.1",
      "type": "promptString"
    },
    
    {
      "id": "epicFile",
      "description": "Select epic file to validate:",
      "type": "pickString",
      "options": [
        "epics/epic-1.json",
        "epics/epic-2.json", 
        "epics/epic-3.json",
        "epics/epic-template.json"
      ]
    },
    
    {
      "id": "moduleName",
      "description": "Enter module name to debug:",
      "default": "src.main",
      "type": "promptString"
    },
    
    {
      "id": "testMarker",
      "description": "Select test marker:",
      "type": "pickString",
      "options": [
        "unit",
        "integration", 
        "red",
        "green",
        "refactor",
        "epic",
        "analytics",
        "slow"
      ]
    }
  ],
  
  "compounds": [
    {
      "name": "üéØ Full TDD Cycle",
      "configurations": [
        "üî¥ TDD: RED Phase - Run Failing Tests",
        "üü¢ TDD: GREEN Phase - Run All Tests", 
        "üîÑ TDD: REFACTOR Phase - Performance Tests"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "tdd-cycle"
      }
    },
    
    {
      "name": "üìä Generate All Artifacts",
      "configurations": [
        "üé® Generate Diagrams",
        "üìä Analytics: Generate Report"
      ],
      "presentation": {
        "group": "artifacts"
      }
    }
  ]
}