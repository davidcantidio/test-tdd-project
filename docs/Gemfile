source "https://rubygems.org"

# GitHub Pages compatible Jekyll version with all supported plugins
gem "github-pages", group: :jekyll_plugins

# Essential plugins supported by GitHub Pages
gem "jekyll-feed", "~> 0.15"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-github-metadata"

# Standard GitHub Pages supported plugins
gem "jekyll-default-layout"
gem "jekyll-optional-front-matter"
gem "jekyll-readme-index"
gem "jekyll-titles-from-headings"
gem "jekyll-relative-links"

# kramdown v2 ships without the gfm parser by default
gem "kramdown-parser-gfm"

# Windows and JRuby specific gems
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Lock `http_parser.rb` gem to `v0.6.x` on JRuby builds
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]