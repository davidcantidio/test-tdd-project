# ðŸ”§ STREAMLIT EXTENSION - ENVIRONMENT CONFIGURATION

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, project
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_username
GITHUB_REPO_NAME=your_repo_name

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_THEME=dark
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
STREAMLIT_AUTO_RERUN=true
STREAMLIT_MAX_UPLOAD_SIZE=200

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Main framework database
DATABASE_URL=sqlite:///./framework.db

# Timer tracking database
TIMER_DATABASE_URL=sqlite:///./task_timer.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# TDAH CONFIGURATION
# =============================================================================
# Pomodoro timer settings (in minutes)
FOCUS_SESSION_DURATION=25
SHORT_BREAK_DURATION=5
LONG_BREAK_DURATION=15
SESSIONS_UNTIL_LONG_BREAK=4

# Timezone for date/time display
TIMEZONE=America/Fortaleza

# Focus tracking
ENABLE_FOCUS_TRACKING=true
ENABLE_SOUND_ALERTS=false
ENABLE_NOTIFICATIONS=true

# =============================================================================
# GAMIFICATION SETTINGS
# =============================================================================
ENABLE_GAMIFICATION=true
POINTS_PER_COMPLETED_TASK=10
POINTS_PER_TDD_CYCLE=5
STREAK_BONUS_MULTIPLIER=1.5

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_RETENTION_DAYS=90
ENABLE_PERFORMANCE_METRICS=true
CACHE_TTL_SECONDS=900

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session timeout (in minutes)
SESSION_TIMEOUT=480

# API rate limiting
GITHUB_API_CALLS_PER_HOUR=4000
RATE_LIMIT_BUFFER=500

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG_MODE=false
ENABLE_PROFILER=false
LOG_LEVEL=INFO

# Testing
TESTING_MODE=false
TEST_DATABASE_URL=sqlite:///./test_framework.db